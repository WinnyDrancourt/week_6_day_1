<div class="card-body">
  <h5 class="card-title"><%= @gossip.title %></h5>
  <p class="card-title"><strong>Content : </strong> <%= @gossip.content %></p>
  <p class="card-title"><strong>From : </strong><%= link_to "#{@gossip.user.first_name}  #{@gossip.user.last_name}", user_path(@user) %></p>
  <p class="card-text"> <strong>Create : </strong><%= @gossip.created_at.strftime("%d/%m/%Y") %></p>
  <p class="card-text"> <strong>Comments : </strong></p>
</div>

<div class="row">
    <% @comment.each do |comment| %>
    <div class="col-sm-10 mb-1 mb-sm-3">
      <div class="card">
        <div class="card-body">
          <p class="card-text"><%= comment.content %></p>
          <p class="card-text"><%= comment.created_at.strftime("%d/%m/%Y") %></p>
        </div>
      </div>
    </div>
    <% end %>
</div>