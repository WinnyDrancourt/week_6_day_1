<main>
<h1>Gossip#show</h1>
<p>Find me in app/views/gossip/show.html.erb</p>

<div class="card-body">
  <h5 class="card-title"><%= @gossip.title %></h5>
  <p class="card-title"><strong>Content : </strong> <%= @gossip.content %></p>

  <p class="card-text"> <strong>Create : </strong><%= @gossip.created_at.strftime("%d/%m/%Y") %></p>
  <p class="card-text"> <strong>Comments : </strong></p>
</div>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <%= link_to "Revenir à tous les gossips", gossips_path, class: "btn bouton-gossip justify-content-md-end me-md-2" %> 
  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <%= link_to "Editer", edit_gossip_path(@gossip), class: "btn bouton-gossip justify-content-md-end me-md-2" %>
  <a href="<%= gossip_path(@gossip) %>" class="btn btn-danger" data-turbo-method="DELETE" data-turbo-confirm="êtes vous sur ?">Supprimer</a>
