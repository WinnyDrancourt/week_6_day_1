
<h1>Gossips#new</h1>
<p>Find me in app/views/gossips/new.html.erb</p>

<%= form_for @gossip do |f| %>

  <div class="form-group">
    <label>Titre</label>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Content</label>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% current_user.first_name %>
  </div>

  <p>Choisir un tag :
  <% @tags.each do |tag| %>
        <%= check_box_tag 'array_tag[]', tag.id -%>
        <%= h tag.title -%>
  <% end %></p>

  <div class="form-group">
  <button type="submit" class="btn bouton-gossip">Valider</button>
</div>

<% end %>

