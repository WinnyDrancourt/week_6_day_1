<%= form_for @gossip, method: "patch" do |f| %>

  <div class="form-group">
    <label>Titre</label>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Content</label>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

