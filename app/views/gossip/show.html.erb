<main>
<h1>Gossip#show</h1>
<p>Find me in app/views/gossip/show.html.erb</p>
<div class="card-body">
  <h5 class="card-title"><%= @gossip.title %></h5>
  <p class="card-title"><strong>Content : </strong> <%= @gossip.content %></p>
  <p class="card-title"><strong>From : </strong><%= link_to "#{@gossip.user.first_name}  #{@gossip.user.last_name}", user_path(@user) %></p>
  <p class="card-text"> <strong>Create : </strong><%= @gossip.created_at.strftime("%d/%m/%Y") %></p>
  <p class="card-text"> <strong>Comments : </strong></p>
</div>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <%= link_to "Revenir à tous les gossips", gossip_index_path, class: "btn bouton-gossip justify-content-md-end me-md-2" %> 
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <%= link_to "Editer", edit_gossip_path(@gossip), class: "btn bouton-gossip justify-content-md-end me-md-2" %>
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <%= link_to "Supprimer", gossip_path(@gossip), method: :delete, class: "btn bouton-gossip justify-content-md-end me-md-2", data: { confirm: "êtes-vous sûr ?" } %>
</div>

</main>